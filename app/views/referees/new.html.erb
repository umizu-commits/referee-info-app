<h1>新規審判登録</h1>

<% if @referee.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(@referee.errors.count, "件のエラー") %>があります:</h4>
    <ul>
      <% @referee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @referee, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :age, "年齢" %>
    <%= f.number_field :age, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :experience, "経験年数" %>
    <%= f.number_field :experience, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :organization, "所属" %>
    <%= f.text_field :organization, class: "form-control" %>
  </div>

  <%= f.submit "登録", class: "btn btn-primary" %>
<% end %>